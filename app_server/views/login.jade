extends layout

block content
    .row.page-header
        .col-lg-12
            h1= pageHeader.title
              small &nbsp;#{pageHeader.strapline}
            p Please Sign in
            .row
                .col-xs-12.col-md-6
            .row
                .col-xs-12.col-md-6
                    form.form-horizontal(action='/notes', method='get', role='form')
                        .form-group
                            label.col-xs-10.col-sm-2.control-label(for='name') User ID
                            .col-xs-12.col-sm-8
                                input#name.form-control(name='name')
                        .form-group
                            label.col-xs-10.col-sm-2.control-label(for='password') Password
                            .col-xs-12.col-sm-8
                                input#password.form-control(type='password' name='password')
                        button.btn.btn-default.pull-right Submit
                .col-xs-12.col-md-4