extends layout

block content
    .row.page-header
        .col-lg-12
            h1= pageHeader.title
            small &nbsp;#{pageHeader.strapline}
      each entry in entries
        .col-lg-12.list-group-item
          h4
            a(href='/notes/edit')= entry.name

    .row
      .col-xs-12.col-md-6
        a(href='/notes/edit').btn.btn-default.pull-right Update note entry

