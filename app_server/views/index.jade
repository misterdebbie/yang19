extends layout

block content
  .row
    .col-xs-12.col-sm-8
      form.form-horizontal(action="", method="post", role="form")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="firstname") First Name
          .col-xs-12.col-sm-8
          input#firstname
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="lastname") Last Name
          .col-xs-12.col-sm-8
          input#lastname
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="film") Film Title
          .col-xs-12.col-sm-8
          input#film
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="summary") Comments
          .col-xs-12.col-sm-8
          input#summary
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="rating") Rating
          .col-xs-12.col-sm-8
          input#rating
        button(type="submit") Submit
      .error= message
      .row.list-group
        each user in users
          .col-xs-12.list-group-item
            p.firstname= user.FirstName
            p.lastname= user.LastName
            p.film= user.FilmTitle
            p.summary= user.Comments
            p.rating= user.Rating


